# MOUNTS
cp /etc/fstab /etc/fstab.bak

# Remove existing entries for mount points we'll reconfigure (keep boot/efi entries)
grep -v -E '^\s*(#|$)|/dev/mapper/lvg-|^proc\s|^sysfs\s|^udev\s|^tmpfs\s|' /etc/fstab > /etc/fstab.tmp || true
mv /etc/fstab.tmp /etc/fstab

cat >> /etc/fstab << 'EOF'
/dev/mapper/lvg-root              /                   ext4       noatime,nodev,errors=remount-ro,ro 0 1
/dev/mapper/lvg-usr               /usr                ext4       noatime,nodev,nosuid,ro 0 2
/dev/mapper/lvg-opt               /opt                ext4       noatime,nodev,nosuid,noexec 0 2
/dev/mapper/lvg-home              /home               ext4       noatime,nodev,nosuid,noexec 0 2
/dev/mapper/lvg-var               /var                ext4       noatime,nodev,nosuid,noexec 0 2
/dev/mapper/lvg-var--log          /var/log            ext4       noatime,nodev,nosuid,noexec 0 2
/dev/mapper/lvg-var--log--audit   /var/log/audit      ext4       noatime,nodev,nosuid,noexec 0 2
proc    			              /proc               proc       noatime,nodev,nosuid,noexec,hidepid=2 0 0
sysfs   			              /sys                sysfs      nodev,nosuid,noexec,ro 0 0
udev    			              /dev                devtmpfs   nosuid,noexec,mode=0755 0 0
tmpfs   			              /tmp                tmpfs      size=2G,noatime,nodev,nosuid,noexec,mode=1777   0 0
tmpfs   			              /var/tmp            tmpfs      size=1G,noatime,nodev,nosuid,noexec,mode=1777   0 0
tmpfs   			              /dev/shm            tmpfs      size=512M,noatime,nodev,nosuid,noexec,mode=1777 0 0
tmpfs   			              /run                tmpfs      size=512M,noatime,nodev,nosuid,noexec,mode=0755 0 0
tmpfs   		                  /run/shm            tmpfs      size=512M,noatime,nodev,nosuid,noexec,mode=1777 0 0
tmpfs   			              /run/coredump       tmpfs      size=256M,noatime,nodev,nosuid,noexec,mode=700  0 0
tmpfs   		                  /overlay            tmpfs      size=2G,noatime,nodev,nosuid,noexec,mode=0755   0 0
tmpfs   		                  /home/user/.cache   tmpfs      size=1G,noatime,nodev,nosuid,noexec,mode=700,uid=1000,gid=1000 0 0
EOF

sed -i 's|^UUID=\([A-Za-z0-9-]\+\)[[:space:]]\+/boot/efi[[:space:]]\+vfat.*|UUID=\1                           /boot/efi           vfat       noatime,nodev,nosuid,noexec,umask=0077,ro 0 2|' /etc/fstab
sed -i 's|^UUID=\([A-Za-z0-9-]\+\)[[:space:]]\+/boot[[:space:]]\+ext4.*|UUID=\1                           /boot               ext4       noatime,nodev,nosuid,noexec,ro 0 2|' /etc/fstab  

# PERMISSIONS
chown root:root /etc/group /etc/group- /etc/passwd /etc/passwd- /etc/security /etc/iptables /etc/default /etc/sudoers /etc/fstab /etc/hosts /etc/host.conf
chmod 0644 /etc/passwd
chmod 0644 /etc/group
chmod 0640 /etc/shadow
chmod 0640 /etc/gshadow
chmod 0600 /etc/passwd-
chmod 0600 /etc/group-
chmod 0600 /etc/shadow-
chmod 0640 /etc/gshadow-
chmod 0640 /etc/fstab 
chmod 0600 /root/.bashrc
chmod 0600 /root/.profile
chmod 0700 /etc/security
chown dev /home/dev
chmod 0700 /home/dev
chmod 0700 /root 
chmod 0700 /boot  
chown root:root /boot/grub/grub.cfg
chmod 0400 /boot/grub/grub.cfg
chmod -R 0400 /etc/iptables
chown root:root /var/run/dbus
chmod 0750 /var/run/dbus
chown root:root /run/systemd
chmod 0750 /run/systemd
chown root:root /etc/security/opasswd
chmod 0600 /etc/security/opasswd
chown root:adm -R /var/log
chmod -R 0640 /var/log

# OPENSNITCH CONFIGURATION
systemctl enable opensnitch
systemctl start opensnitch
apt install -y git
git clone --depth 1 https://github.com/DXC-0/Respect-My-Internet.git
cd Respect-My-Internet
chmod +x install.sh
./install.sh
systemctl restart opensnitch
cd

# PRIVILEGE ESCALATION HARDENING

# Wheel group
getent group wheel >/dev/null || groupadd wheel
usermod -aG wheel dev

# Securetty
echo "" > /etc/securetty
chmod 600 /etc/securetty

# Restrict cron
echo "dev" > /etc/cron.allow
echo "dev" > /etc/at.allow
chmod 600 /etc/cron.allow
chmod 600 /etc/at.allow
# Deny files take precedence - empty them
echo "" > /etc/cron.deny 2>/dev/null || true
echo "" > /etc/at.deny 2>/dev/null || true

# Polkit
mkdir -p /etc/polkit-1/rules.d
cat > /etc/polkit-1/rules.d/99-deny-all.rules << 'EOF'
// Deny all actions by default
polkit.addRule(function(action, subject) {
    // Allow dev user
    if (subject.user == "dev") {
        return polkit.Result.AUTH_ADMIN;
    }
    // Deny everyone else
    return polkit.Result.NO;
});
EOF
chmod 644 /etc/polkit-1/rules.d/99-deny-all.rules

# LOCKDOWN
# Remove all SUID/SGID bits
find / -xdev \( -perm -4000 -o -perm -2000 \) -exec chmod a-s {} \; 2>/dev/null || true
chmod u+s /usr/bin/sudo
[ -f /bin/sudo ] && chmod u+s /bin/sudo || true
apt clean
apt autopurge -y
RC_PKGS=$(dpkg -l | grep '^rc' | awk '{print $2}' || true)
[ -n "$RC_PKGS" ] && apt purge -y $RC_PKGS || true
chattr +i /etc/fstab
chattr +i /etc/adduser.conf
chattr +i /etc/group*
chattr -R +i /etc/host*
chattr +i /etc/login.defs
chattr -R +i /etc/default
chattr +i /etc/passwd*
chattr +i /etc/gshadow*
chattr -R +i /etc/sudo*
chattr +i /root/.bashrc
chattr +i /home/dev/.bashrc
chattr +i /etc/shadow*
chattr +i /etc/shells
chattr -R +i /etc/pam.d
chattr -R +i /usr/lib/pam.d
chattr +i /usr/lib/sysctl.d/sysctl.conf
chattr -R +i /usr/lib/sysctl.d
chattr -R +i /etc/sysctl*
chattr -R +i /etc/modprobe.d
chattr -R +i /usr/lib/modprobe.d
chattr +i /etc/services
chattr -R +i /etc/security
chattr -R +i /etc/iptables
chattr -R +i /etc/opensnitchd
chattr +i /etc/deluser.conf
chattr +i /etc/login.defs
chattr +i /etc/default/useradd
chattr -R +i /etc/profile*
chattr -R +i /etc/bash*
chattr +i /etc/securetty
chattr -R +i /etc/cron*
chattr +i /etc/at.allow
chattr -R +i /etc/polkit*
chattr -R +i /etc/polkit*

echo "HARDENING SCRIPT COMPLETE"
